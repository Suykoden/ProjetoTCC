@model LetsParty.Domain.ViewModel.AnuncioViewModel

@using (Html.BeginForm("PaginaProduto", "Anuncio", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if (Model != null)
    {
        <div class="row carousel-row">
            <div class="col-xs-8 col-xs-offset-2 slide-row">
                <div id="carousel-1" class="carousel slide slide-carousel" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                    </ol>
                    <!-- Wrapper for slides -->

                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="@Html.DisplayFor(modelItem => Model.Thumbnail)" alt="Image">
                        </div>
                        <div class="item">
                            <img src="@Html.DisplayFor(modelItem => Model.Thumbnail2)" alt="Image">
                        </div>
                        <div class="item">
                            <img src="@Html.DisplayFor(modelItem => Model.Thumbnail3)" alt="Image">
                        </div>
                        <div style="display:none">
                            @Html.HiddenFor(model => Model.Caminho);
                            @Html.HiddenFor(model => Model.Caminho2);
                            @Html.HiddenFor(model => Model.Caminho3);
                            @Html.HiddenFor(model => Model.Data);
                            @Html.HiddenFor(model => Model.Titulo);
                            @Html.HiddenFor(model => Model.Descricao);
                        </div>
                    </div>
                </div>
                <div class="slide-content">
                    <h4>@Html.DisplayFor(modelItem => Model.Titulo)</h4>
                    <p>
                        @Html.DisplayFor(modelItem => Model.Descricao)
                    </p>
                </div>
                <div class="slide-footer">
                    <span class="pull-right buttons">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-fw fa-eye"></i> Ver</button>
                    </span>
                </div>
            </div>
        </div>
    }
}