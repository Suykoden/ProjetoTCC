@model LetsParty.Domain.ViewModel.AnuncioViewModel

@{
    ViewBag.Title = "Anuncio";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="iso-8859-1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>f</title>
    <!-- Bootstrap Core CSS -->
    <!-- Custom CSS -->



</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="http://localhost:34417/Home">Festeje - O Seu site de festas</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6 col-lg-6 col-md-6">
                        @using (Html.BeginForm("Create", "Anuncio", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-4">
                                    <h1> <span class="label label-primary">Faça aqui o seu anúncio</span></h1>
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-sm-2">Categoria</label>
                                <div class="col-md-6 col-md-6 col-md-6">
                                    @Html.DropDownListFor(model => model.ServicoID, new SelectList(ViewBag.ListaServico, "Id", "Nome"), new { @class = "form-control", placeholder = "Categoria" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Titulo">Titulo:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">

                                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", placeholder = "Titulo do Anúncio" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Valor">Preço:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">

                                    @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control", placeholder = "Titulo do Anúncio" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Descrição">Descricao:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.TextAreaFor(model => model.Descricao, 10, 120, htmlAttributes: new { style = "width: 100%; max-width: 100%;", placeholder = "Descrição" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Endereço">Endereço:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control", placeholder = "Endereço" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Numero">Número:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", placeholder = "Número" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Cep">Cep:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Cep, new { htmlAttributes = new { @class = "form-control", placeholder = "Cep" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Bairro">Bairro:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control", placeholder = "Bairro" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Cidade">Cidade:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control", placeholder = "Cidade" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="">Estado:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control", placeholder = "Estado" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="">Email:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="">Telefone:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefone" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-4">
                                    <input type="file" name="file" id="file" />
                                    @Html.HiddenFor(model => model.Caminho)

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-4">
                                    <input type="file" name="file2" id="file" />
                                    @Html.HiddenFor(model => model.Caminho2)

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-4">
                                    <input type="file" name="file3" id="file" />
                                    @Html.HiddenFor(model => model.Caminho3)

                                </div>
                            </div>
                            <br />
                            <br />

                            <div class="col-sm-6 col-lg-6 col-md-6">
                                <button type="submit" class="btn btn-primary">Anunciar</button>
                            </div>
                        }
                    </div> <!--fim div 1-->
                    <div class="col-sm-6 col-lg-6 col-md-4">
                        <img src="http://blog.festabox.com.br/wp-content/uploads/2013/02/festaanimada_festabox.jpg" alt="">
                    </div>
                </div>
            </div> <!--fim conteudo painel-->
        </div> <!--fim painel-->
        <br />
        <br />
        <br />
        <br />
    </div>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Festeje.com 2015</p>
            </div>
        </div>
    </footer>
    <!-- jQuery -->
    <!-- Bootstrap Core JavaScript -->

</body>
</html>
