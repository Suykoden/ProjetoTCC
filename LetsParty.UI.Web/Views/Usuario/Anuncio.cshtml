                                    <textarea cols="40" rows="8" name="body" id="body" class="form-field form-field-textarea form-field-larger"></textarea>
                                </div>
                            *@
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-4">
                                    <button type="submit" class="btn btn-primary">Adicionar imagens</button>
                                </div>
                            </div>


                            <br />
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Preco">Preço:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control", placeholder = "Titulo do Anúncio" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Cep">Cep:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Cep, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o Cep", type = "text" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Telefone">Telefone:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefone", type = "text" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Rua">Rua:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.EditorFor(model => model.Rua, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome da rua", type = "text" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Numero">Número:</label>
                                <div class="col-sm-6 col-lg-2 col-md-6">
                                    @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", placeholder = "nº", type = "text" } })
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-sm-2">Estado</label>
                                <div class="col-md-6 col-md-6 col-md-6">
                                    @Html.DropDownListFor(model => model.Estado, new List<SelectListItem>{
                                   new SelectListItem(){Text = "", Value=""},
                                   new SelectListItem(){Text = "Alagoas", Value="Alagoas"},
                                   new SelectListItem() {Text = "Amapá", Value="Amapá"},
                                   new SelectListItem() {Text = "Amazonas", Value="Amazonas"},
