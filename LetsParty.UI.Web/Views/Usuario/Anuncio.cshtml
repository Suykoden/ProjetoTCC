    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6 col-lg-6 col-md-6">
                        @using (Html.BeginForm("Create", "Anuncio", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-4">
                                    <h1> <span class="label label-primary">Faça aqui o seu anúncio</span></h1>
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-sm-2">Categoria</label>
                                <div class="col-md-6 col-md-6 col-md-6">
                                    @Html.DropDownListFor(model => model.Categoria, new List<SelectListItem>{
                                  new SelectListItem(){Text = "", Value=""},
                                  new SelectListItem(){Text = "Buffet", Value="Buffet"},
                                  new SelectListItem() {Text = "Organização de festas", Value="Organização de festas"},
                                  new SelectListItem() {Text = "Produtos festivos", Value="Produtos festivos"},
                                  new SelectListItem() {Text = "Casamentos", Value="Casamentos"}
                                   }, new { @class = "form-control", placeholder = "Categoria" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Titulo">Titulo:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">

                                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", placeholder = "Titulo do Anúncio" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Descrição">Descricao:</label>
                                <div class="col-sm-6 col-lg-6 col-md-6">
                                    @Html.TextAreaFor(model => model.Descricao, 10, 120, htmlAttributes: new { style = "width: 100%; max-width: 100%;", placeholder = "Descrição" })
                                </div>
                            </div>


                            @*<div class="form-row">
                                <div class="form-col col-1">
                                    <label class="control-label col-sm-2" for="">Descrição:</label>
                                </div>
